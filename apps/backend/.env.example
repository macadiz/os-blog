# Environment Configuration
# Copy this file to .env and update the values for your environment
# See README.md for detailed documentation of each variable

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/os_blog?schema=public"

JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Application
NODE_ENV="development"
PORT=3001

# Frontend URL (optional in production, will use request origin if not set)
# In development, defaults to http://localhost:4200
FRONTEND_URL="http://localhost:4200"

CORS_ORIGINS="http://localhost:4200,http://localhost:3000"
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Optional
# FORCE_HTTPS=true
# TRUST_PROXY=true
# LOG_LEVEL=info
